        <h3 class="page-title">
            کارت هدیه
        </h3>
        <hr style="style-one" />
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-9">
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>کارت هدیه
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="row" style="">
                    <div class="form-body">
                        <div class="col-md-6">
                            <div style="padding: 20px;" class="text-center">
                                <p>طرح کارت هدیه مورد نظر را انتخاب نمایید</p>
                                <img id="selectedimage" class="img-responsive"  src="/Content/images/GiftCard/05.jpg" />
                                <br />
                                <br/>
                                
                                <button class="btn btn-large purple" onclick=" $('#uploader').trigger('click');">انتخاب عکس دلخواه</button>
                                
                                <input id="uploader" class="btn uploader" type="file" style="display: none" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center" style="padding-top: 20px;">

                                <form action="/account/citypay">
                                    <p>
                                        عبارت مورد نظر را وارد نمایید(ترجیحا 4 یا 5 کلمه)
                                    </p>
                                    <div class="input-group">

                                        <input type="text" class="form-control" placeholder="عبارت مورد نظر">
                                        <span class="input-group-addon">
                                            <i class="fa fa-credit-card"></i>&nbsp;
                                        </span>
                                    </div>
                                    <br />
